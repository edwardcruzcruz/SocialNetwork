{% extends "AppBundle:Layout:layout.html.twig"%}
{% block content %}
    <div class="col-lg-4 box-form">
        <h2>Ingresar: </h2>
        <hr/>
        <!-- Con estas lineas podemos revisar los dtos del usuario autenticado
        {%if is_granted('ROLE_USER')%}
            {{ dump(app.user)}}
        {% endif%}-->
        <!--login_check es la ruta a la que apunta el formularo al realizarse alguna accion-->
        <form action="{{path('login_check')}}" method="POST">
            <label>Email </label>
            <!--Las entradas deben tener obligatoriamente todos los atributos con variables-->
            <input type="email" id="username" name="_username" value="{{last_username}}" class="form-control"/>
            <label>Contrase√±a </label>
            <input type="password" id="password" name="_password" value="{{last_username}}" class="form-control"/>
            
            <input type="submit" value="Entrar" class="btn btn-success"/>
            <input type="hidden" name="_target_path" value="/home"/>
        </form>
    </div>
{% endblock %}