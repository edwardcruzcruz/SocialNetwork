{% extends "AppBundle:Layout:layout.html.twig"%}
{% block javascripts %}
    <!--Bloque definido en la clase base layout -->
    <!--Importante primero cargar el parent, es decir, todo los archivos que ya hay mas 
    este nuevo de javascript-->
    {{ parent() }}
    <script src="{{asset('assets/js/custom/users.js')}}"></script>
{% endblock%}
{% block content %}
    <div class="container">
        <div class="col-lg-12 box-default">
            <h1>Gente</h1>
            <div class="count">
                <span class="label label-primary">
                    Total  de personas: {{ pagination.getTotalItemCount }}
                </span>
            </div>
            <hr/>
            <div class="box-content box-users">
                {% for user in pagination %}
                    <div class="col-lg-12 user-item">
                        <div class="avatar">
                            {%if user.image == null%}
                                <img src="{{asset('assets/images/default.png')}}"/>
                            {%else%}
                                <img src="{{asset('uploads/users/'~user.image)}}"/>
                            {%endif%}
                        </div>
                        <div class="user-item-content">
                            <p>{{user.name}} {{user.surname}} - {{user.nick}}</p>
                            <p>{{user.bio}}</p>
                        </div>
                        {% if  app.user.id != user.id%}
                            <div class="pull-right button-following">
                                <button class="btn btn-sm btn-success btn-follow
                                        {% if app.user|following(user) == true %}
                                            hidden
                                        {% endif%}
                                        " data-followed="{{user.id}}">
                                    <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
                                    seguir
                                </button>
                                <button class="btn btn-sm btn-default btn-unfollow
                                        {% if app.user|following(user) ==false %}
                                            hidden
                                        {% endif%}
                                        " data-followed="{{user.id}}">
                                    <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
                                    Dejar de seguir
                                </button>
                            </div>
                        {% endif %}
                        <!--class="clearfix" es una clase especial de bootstrap 
                        que nos ayuda a limpiar y ampliar cada item.-->
                        <div class="clearfix"></div>
                        <hr/>
                    </div>
                {% endfor %}
            </div>
            <!--personalizado diseÃ±o de una plantilla nuestra en layout llamada
                custon_pagination.html.twig
            -->
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
            <!--limpia lo flotado, esto es en la busqueda de usuario
            por nombre, apellido o apodo-->
            <div class="clearfix"></div>
        </div>
    </div>
{% endblock %}